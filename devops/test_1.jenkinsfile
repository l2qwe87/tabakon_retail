pipeline {
    agent {
        label 'jen-slave'
    }

    stages {
        stage('git') {
            steps {
                git branch: '#tmp', url: 'https://github.com/l2qwe87/tabakon_retail.git'
            }
        }

        stage('angular build') {
            steps {
                sh 'cd src/tabakon.net/AngularApp && npm run build-prod'
            }
        }

        stage('dotnet build') {
            steps {
                sh 'dotnet build src/tabakon.net/tabakon.net -c Release'
            }
        }
        stage('dotnet publish') {
            steps {
                sh 'dotnet publish src/tabakon.net/RetailClient.Web/RetailClient.Web.csproj -c Release --no-build --output ./pub/'
            }
        }
    
        stage('Deploy') {
            steps {
                sh 'cd pub && ls'
                echo 'Deploying....'
            }
        }
    }
}