	Запрос.УстановитьПараметр("СтатусЧекаККМ",Перечисления.СтатусыЧековККМ.Архивный);
	Запрос.УстановитьПараметр("ВидПродажа",Перечисления.ВидыОперацийЧекККМ.Продажа);
	Запрос.УстановитьПараметр("ВидВозврат",Перечисления.ВидыОперацийЧекККМ.Возврат);

	Рез = Запрос.Выполнить().Выбрать();
	
