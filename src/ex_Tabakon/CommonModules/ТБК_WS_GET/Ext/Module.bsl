		элЧеки.Вставить("КолЧековПродажа", рез.КолЧековПродажа);
		элЧеки.Вставить("КолЧековВозврат", рез.КолЧековВозврат);
		
		Чеки.Добавить(элЧеки);
	КонецЦикла; 
	
	возврат Чеки;	
