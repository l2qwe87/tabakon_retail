	</dataSource>
	<dataSet xsi:type="DataSetQuery">
		<name>Запрос</name>
		<field xsi:type="DataSetFieldField">
			<dataPath>НомерСтроки</dataPath>
			<field>НомерСтроки</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>Сумма</dataPath>
			<field>Сумма</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>Количество</dataPath>
			<field>Количество</field>
			<title xsi:type="v8:LocalStringType">
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>Количество</v8:content>
				</v8:item>
			</title>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>Номенклатура</dataPath>
			<field>Номенклатура</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>СсылкаВладелец</dataPath>
			<field>СсылкаВладелец</field>
			<title xsi:type="v8:LocalStringType">
				<v8:item>
					<v8:lang>ru</v8:lang>
					<v8:content>Ссылка владелец</v8:content>
				</v8:item>
			</title>
		</field>
		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	док.Ссылка КАК СсылкаВладелец,
	док.НомерСтроки,
	ЕСТЬNULL(нБК.Ссылка, док.Номенклатура) КАК Номенклатура,
	док.Количество * ВЫБОР
		КОГДА ЕСТЬNULL(док.Коэффициент, 0) = 0
			ТОГДА 1
		ИНАЧЕ док.Коэффициент
	КОНЕЦ КАК Количество,                                                       
	док.Сумма
ИЗ
	Документ.ВозвратТоваровОтПокупателя.Товары КАК док
		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.Номенклатура КАК нБК
		ПО (нБК.Ссылка = док.Номенклатура.РеальнаяНоменклатураДляБК)
ГДЕ
	док.Ссылка = &amp;СсылкаВладелец</query>
	</dataSet>
	<parameter>
		<name>СсылкаВладелец</name>
		<title xsi:type="v8:LocalStringType">
			<v8:item>
				<v8:lang>ru</v8:lang>
				<v8:content>Ссылка владелец</v8:content>
			</v8:item>
		</title>
		<valueType>
			<v8:Type xmlns:d4p1="http://v8.1c.ru/8.1/data/enterprise/current-config">d4p1:DocumentRef.ВозвратТоваровОтПокупателя</v8:Type>
		</valueType>
		<value xsi:nil="true"/>
		<useRestriction>true</useRestriction>
	</parameter>
